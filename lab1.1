import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // สร้าง Object ของ Scanner สำหรับรับค่าจากผู้ใช้
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("--- โปรแกรมคำนวณผลบวกจำนวนเต็ม ---");

        // 1. รับค่าจำนวนเต็มตัวที่หนึ่ง
        System.out.print("กรุณาป้อนจำนวนเต็มตัวที่ 1: ");
        // ใช้ nextInt() เพื่ออ่านค่าจำนวนเต็ม
        int number1 = scanner.nextInt(); 

        // 2. รับค่าจำนวนเต็มตัวที่สอง
        System.out.print("กรุณาป้อนจำนวนเต็มตัวที่ 2: ");
        int number2 = scanner.nextInt();
        
        // ปิด Scanner เพื่อจัดการทรัพยากร
        scanner.close(); 
        
        // 3. คำนวณผลบวก
        int sum = number1 + number2; 

        // 4. แสดงผลลัพธ์ออกทางหน้าจอ
        System.out.println("\n--- ผลลัพธ์ ---");
        System.out.println("จำนวนเต็มตัวที่ 1 คือ: " + number1);
        System.out.println("จำนวนเต็มตัวที่ 2 คือ: " + number2);
        System.out.println("ผลบวกของ " + number1 + " และ " + number2 + " คือ: " + sum);
        System.out.println("-----------------");
    }
}
