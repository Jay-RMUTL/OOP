import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String inputStudentId = scanner.nextLine();
        String inputName = scanner.nextLine();
        Student studentObject = new Student(inputStudentId, inputName);
        System.out.println("--- ข้อมูลนักศึกษา ---");
        studentObject.displayInfo();
        scanner.close();
    }
}

class Student {
    private String studentId;
    private String name;

    public Student(String studentId, String name) {
        this.studentId = studentId;
        this.name = name;
    }

    public void displayInfo() {
        System.out.println("รหัสนักศึกษา: " + this.studentId);
        System.out.println("ชื่อ-นามสกุล: " + this.name);
    }
}
